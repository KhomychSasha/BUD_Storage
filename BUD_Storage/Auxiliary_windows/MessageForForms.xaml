<Window x:Class="BUD_Storage.Auxiliary_windows.MessageForForms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUD_Storage.Auxiliary_windows"
        mc:Ignorable="d"
        Background= "#FF354753"
        Name="WindMessage" Height="150" Width="400" MinHeight="200" MinWidth="400" MaxHeight="200" MaxWidth="400" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Message" Grid.Row="0" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFC3C5C9" />
        <Button x:Name="BtnOK"  IsCancel="True" Grid.Row="1" FontSize="16" Content="OK" Width="80" Height="30" Background="#B299B3D3" HorizontalAlignment="Right" Margin="0,0,10,0"/>
    </Grid>
</Window>
